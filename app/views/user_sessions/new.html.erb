<div id="login" class="container">
  <div class="row">
    <div class="col col-md-10 offset-md-1 col-lg-8 offset-lg-2 mt-4">
      <%= form_with url: login_path, local: true, class: 'login-form mt-5' do |f| %>
        <p class="login-text">
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-lock fa-stack-1x"></i>
          </span>
        </p>
        <div class="form-group col-xs-12">
          <%= f.email_field :email, class: 'login-username fa small', placeholder: "\uf0e0 Email", autofocus: 'true', required: 'true' %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.password_field :password, class: 'login-password fa small', placeholder: "\uf084 Password", autofocus: 'true', required: 'true' %>
          <%= link_to (t '.password_forget'),"#", class: 'text-muted small ml-3' %>
        </div>
        <%= f.submit (t 'defaults.login'), class: 'login-submit px-3' %>
      <% end %>
      <div class='text-center small'>
        <%= link_to (t '.to_register_page'), new_user_path, class: 'text-white' %>
      </div>
      <div class='text-center mt-5'>
        <%= link_to (t '.facebook_login'), auth_at_provider_path(provider: :facebook) %>
      </div>
      <div class="underlay-photo"></div>
      <div class="underlay-black"></div>
    </div>
  </div>
</div>
