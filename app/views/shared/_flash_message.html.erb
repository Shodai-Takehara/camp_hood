<% flash.each do |message_type, message| %>
  <div class="container px-lg-5 px-sm-5 alert alert-<%= message_type %>">
    <%= message %><button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% end %>

<script>
$(function() {
  $(".close").click(function() {
    $(".alert").hide();
  });
});
</script>
