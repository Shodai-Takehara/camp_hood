<tr>
    <td>
        <%= campsite.id %>
    </td>
    <td>
    <%= link_to campsite.name, admin_campsite_path(campsite) %>
    </td>
    <td>
        <%= campsite.prefecture.name %>
    </td>
    <td>
        <%= campsite.address %>
    </td>
    <td>
        <%= campsite.checkin %>
    </td>
    <td>
        <%= campsite.checkout %>
    </td>
    <td>
        <%= link_to t('defaults.show'), admin_campsite_path(campsite), class:"btn btn-info" %>
        <%= link_to t('defaults.edit'), edit_admin_campsite_path(campsite), class:"btn btn-success" %>
        <%= link_to t('defaults.delete'), admin_campsite_path(campsite), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class:"btn btn-danger" %>
    </td>
</tr>
