<% content_for(:title, t('.title'))  %>
<div class="container pt-2">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <!-- 検索フォーム -->
      <div>
        <%= render 'search_form' %>
      </div>
    </div>
  </div>
  <div class="text-right mb-3">
    <%= link_to t('defaults.new'), new_admin_campsite_path, class:"btn btn-dark" %>
  </div>

　<!-- キャンプ場一覧 -->
<div class="row">
<div class="col-md-12">
  <table class="table table-striped small">
    <thead>
    <tr>
      <th scope="col"><%= Campsite.human_attribute_name(:id) %></th>
      <th scope="col"><%= Campsite.human_attribute_name(:name) %></th>
      <th scope="col">都道府県</th>
      <th scope="col"><%= Campsite.human_attribute_name(:address) %></th>
      <th scope="col"><%= Campsite.human_attribute_name(:checkin) %></th>
      <th scope="col"><%= Campsite.human_attribute_name(:checkout) %></th>
    </tr>
    </thead>
    <tbody>
    <%= render @campsites %>
    </tbody>
  </table>
</div>
</div>
<div class="row">
<div class="col-md-12">
  <!-- ページネーション -->
  <%= paginate @campsites %>
</div>
</div>
</div>
